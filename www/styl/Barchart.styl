.barchart
  position absolute
  top 107px
  left 30px
  bottom 0px
  width calc(100% - 40px)
  .cols
    position absolute
    top 0px
    left 0px
    bottom 0px
    width 100%
    .col
      float left
      height 100%
      position relative
      .col-content
        position absolute
        top 0px
        width 100%
        bottom 25px
        padding 0px 15%
        border-bottom 1px solid #a
        opacity 1
        transition opacity 0.4s
        .category:hover
          opacity 0.7
          cursor pointer
        .category:nth-child(2)
          border-top-right-radius 3px
          border-top-left-radius 3px
        .fatalities-count
          position absolute
          left 0px
          width 100%
          text-align center
          padding-bottom 4px
          font-size 12px
          color #a

      .axis
        position absolute
        bottom 0px
        width 100%
        text-align center
        font-weight 700
        font-size 12px
        line-height 28px
  ul.legend
    position absolute
    top 0px
    right 5px
    padding 0px
    margin 0px
    list-style none
    li
      text-align right
      position relative
      padding-right 30px
      margin-bottom 5px
      div
        position absolute
        right 0px
        top 2px
        width 16px
        height 16px
        border-radius 3px



